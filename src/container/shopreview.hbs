<main>
    <section class="row gx-3">
        {{#with formBlock}}
        <div class="col-8">
            <h1>{{header}}</h1>
            <p class="fs-6 mb-3">{{rating.title}}: {{rating.value}}</p>
            {{#with actionBlock}}
            <ul class="nav nav-tabs mb-5">
                {{#each tabs}}
                <li class="nav-item">
                    <a class="nav-link {{#if isActive}}active{{/if}}" href="#">{{text}}</a>
                </li>
                {{/each}}
            </ul>
            <hr class="my-5 bold">
            {{#with field}}
            <div class="input-group">
                <input class="form-control col-1" type="text" placeholder="{{placeholder}}">
                <a class="btn-secondary btn" href="{{button.link}}">{{button.text}}</a>
            </div>
            {{/with}}
            {{/with}}
            <hr class="my-5">
            {{#with feedbackBlock}}
            <h2 class="mb-5">{{title}}</h2>
            {{#each buttons}}
            <a class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isWarning}}btn-warning{{/if}} {{#if isDanger}}btn-danger{{/if}}"
                href="{{link}}">{{text}}</a>
            {{/each}}
            {{/with}}
        </div>

        <div class="col-4">
            {{#with goodsInfo}}
            <div class="container border mb-3">
                <img class="pt-3" src="{{photo}}" alt="photo">
                <p class="fs-2">{{name}}</p>
            </div>

            <div class="container border mb-3">
                <p class="fs-3">{{price}}</p>
                {{#each buttons}}
                <div class="col">
                    <a class="mb-3 btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-outline-secondary{{/if}}"
                        href="{{link}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
            <div class="container border">
                <p class="fs-5">{{seller.title}}: <span class="fw-bold">{{seller.value}}</span></p>
            </div>
            {{/with}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    {{>reviewItem}}

    {{>shopaction}}

</main>